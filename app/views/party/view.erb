<h1>Your party is ready!</h1>
<ul>
<% @party.people.each do |p| %>
    <li><%= p.name %> is <%= if p.ready?; 'has confirmed.'; else 'has not responded.'; end %></li>
<% end %>
</ul>
<br/>
<p>Enter your id to confirm:</p>
<%= form_tag '/party/confirm', :name => 'idForm', :onsubmit => 'return validateId()' do %>
    <%= text_field(:person, :name, size: 20) %>
    <%= submit_tag %>
<% end %>

<script>
    function validateId() {
        var x = document.forms["idForm"]["person_name"].value;
        if (x == null || x == "") {
            alert("ID can't be blank");
            return false;
        }

        if (x.charAt(0) != '@'){
            alert("IDs start with @");
            return false;
        }
    }
</script>